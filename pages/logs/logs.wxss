page{
  background-color: gainsboro;
}

.img_name_container{
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 20rpx 0rpx 0px 0px;
  background-color: #fff;
}

.log_avatar{
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  margin: 20rpx;
  flex: none;
}

.log_name_qianming {
  flex: 1;
  line-height: 1.8em;
}

.nickname{
  font-size: 40rpx;
  display: block;
}

.qianming {
  font-size: 30rpx;
  display: block;
  color: #999;
}

.img_name_ft {
  flex: none;
  margin-right: 20rpx;
  /* position:relative;
  text-align: right; */
}

.img_name_ft::after {
  vertical-align: middle;
  content: " ";
  height: 30rpx;
  width: 30rpx;
  border-width: 4rpx 4rpx 0px 0px;
  border-color: #c8c8cd;
  border-style: solid;
  transform: matrix(.71, .71, -.71, .71, 0, 0);
  display: inline-block;
}

.fans_line {
  display: block;
  width: 100%;
  background-color: #fff;
  text-align: center;
}

.fans_line_item {
  display: inline-block;
  width: 33%;
}

.fans_item_hd {
  display: block;
  color: #999;
  font-size: 30rpx;
}

.fans_item_ct {
  font-weight: bold;
  font-size: 36rpx;
}